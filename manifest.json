{
  "manifest_version": 2,
  "name": "Local Adoptable Pets",
  "description": "This extension shows an adoptable pet near you!",
  "version": "0.1.0",
  "author": "Sierra McLawhorn",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Adopt!"
  },

  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["jquery.min.js", "popup.js"]
  }],

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://api.petfinder.com/*"
  ]
}
